<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shixels.activity.Game.Tickets">
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/tickets"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/black_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/soldby"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/solddby"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/soldDate"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:text="12/12/2014 12:30pm"
                android:textColor="#000000" />

            <View android:id="@+id/separator"
                android:background="@color/blueText"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="5dp"
                android:layout_centerVertical ="true"
                android:layout_alignParentTop="true"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/my"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="My"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:id="@+id/gametypeImg"
                    android:tint="@android:color/black"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/my"
                    android:src="@drawable/sixstarlogo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/gametypeImg"
                    android:layout_gravity="center_horizontal"
                    android:text="Picks"
                    android:textStyle="bold"
                    android:textColor="#000000" />



            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <mehdi.sakout.fancybuttons.FancyButton
                    xmlns:fancy="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    fancy:fb_fontIconSize="25dp"
                    fancy:fb_fontIconResource="&#x20a6;"
                    fancy:fb_defaultColor="@color/white"
                    fancy:fb_textColor="@android:color/black"
                    fancy:fb_text=""
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="20sp"
                    android:text="1000"
                    android:id="@+id/amount"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>



            <com.google.android.flexbox.FlexboxLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                app:justifyContent="center"
                android:id="@+id/picks"
                android:layout_height="wrap_content">



            </com.google.android.flexbox.FlexboxLayout>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/barcode" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/gameid"
                android:layout_gravity="center_horizontal"
                android:text="00000000000000"
                android:textStyle="bold"
                android:textColor="#000000" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nextDrawText"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/nextDraw"
                        android:layout_height="wrap_content"
                        android:text="1st December 16."
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jackpot"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <mehdi.sakout.fancybuttons.FancyButton
                            xmlns:fancy="http://schemas.android.com/apk/res-auto"
                            android:layout_width="wrap_content"
                            fancy:fb_fontIconSize="25dp"
                            fancy:fb_fontIconResource="&#x20a6;"
                            fancy:fb_defaultColor="@color/white"
                            fancy:fb_textColor="@android:color/black"
                            fancy:fb_text=""
                            android:layout_height="wrap_content"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/jackpot"
                            android:layout_marginTop="4dp"
                            android:layout_height="wrap_content"
                            android:text="10000000"
                            android:textColor="#000000"
                            android:textSize="15sp" />


                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/white"
                android:text="@string/unconfirm"
                android:background="@drawable/pickforme_btn"
                android:id="@+id/confirm"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="@string/ageWarn"
                android:textColor="#000000"
                android:textSize="15sp" />



        </LinearLayout>


    </ScrollView>





</FrameLayout>
